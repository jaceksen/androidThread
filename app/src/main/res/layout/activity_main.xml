<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.jaceksen.androidthread.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="licznik: 1"
            android:textSize="36sp" />

        <Button
            android:id="@+id/buStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buStart"
            android:text="Uruchom kolejny wątek" />

        <Button
            android:id="@+id/buStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buStop"
            android:text="Stop" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buReset"
            android:text="Reset" />

        <TextView
            android:id="@+id/tvWatek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="liczba wątków: 0"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
